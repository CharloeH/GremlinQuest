<Window x:Class="GremlinQuest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GremlinQuest"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" WindowState="Maximized">
    <StackPanel x:Name="SPWindow">
        <Button x:Name="BtnShop" Click="BtnShop_Click" Content="Open Shop" Visibility="Visible"/>
        <Canvas x:Name="Canvas">
            <Button x:Name="btnPlay" Content="Play" Click="btnPlay_Click" Height="100" Width="200" Canvas.Left="540" Canvas.Top="360"/>
            <Button x:Name="btnCredits" Content="About" Click="btnCredits_Click" Height="100" Width="200" Canvas.Left="540" Canvas.Top="500"/>
            <Button x:Name="btnBack" Content="Back" Click="btnBack_Click" Height="100" Width="200" Canvas.Left="540" Canvas.Top="500" Visibility="Hidden"/>
            <TextBlock x:Name="txtCredits" Text="Test" Height="100" Width="200" Canvas.Left="540" Canvas.Top="400" Visibility="Hidden"/>
            
        </Canvas>
    </StackPanel>
</Window>
